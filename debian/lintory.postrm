#!/bin/bash
set -e

case "$1" in
    (purge)
        for i in /var/lib/lintory
        do
            if dpkg-statoverride --list $i >/dev/null 2>&1
            then
                dpkg-statoverride --remove $i
            fi
        done
        rm /etc/lintory/settings.py*
        rm /var/lib/lintory/lintory.db*
    ;;
esac


